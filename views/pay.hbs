</head>

<body>
  {{> header }}
  <div class="container">
    <!-- Tabs -->
    <ul id="tabs" class="inline-flex w-full px-1 pt-2"
      style="display: flex; align-items:center; justify-content:center; ">
      <li class="px-4 py-2 -mb-px font-semibold text-gray-800 border-purple-600 rounded-t opacity-50 dark:text-white"><a
          id="default-tab" href="#first">Buy</a></li>
      <li class="px-4 py-2 font-semibold text-gray-800 rounded-t opacity-50 dark:text-white"><a href="#second">Sell</a>
      </li>
      <li class="px-4 py-2 font-semibold text-gray-800 rounded-t opacity-50 dark:text-white"><a href="#third">Send</a>
      </li>
      <li class="px-4 py-2 font-semibold text-gray-800 rounded-t opacity-50 dark:text-white"><a
          href="#fourth">Receive</a></li>
    </ul>

    <!-- Tab Contents -->
    <div id="tab-contents">
      <div id="first" class="p-4 dark:text-white">
        <div class="flex justify-center" style="flex-direction:column !important; align-items:center !important">
          <div class="mb-3 xl:w-96" style="min-width: 216px;">
          <form action="/buy" method="post" style="margin-bottom: 0;">
            <select class="form-select appearance-none
      block
      w-full
      px-3
      py-1.5
      text-base
      font-normal
      bg-gray-200 bg-clip-padding bg-no-repeat
      rounded
      transition
      ease-in-out
      m-0
      dark:bg-gray-700
      focus:text-gray-700 focus:bg-gray focus:outline-none" aria-label="Default select example" id="drop-down-coin"
              style="color:grey;border: none !important;" name="coins">
            </select>
          </div>
          <input type="hidden" value="{{privateKey}}" name="privateKey">
           <input type="hidden" value="{{publicAddress}}" name="publicAddress">
            <input type="hidden" value="{{name}}" name="username">
            <input type="hidden" value="{{id}}" name="userid">
          <input type="text" name="currentprice" id="price-in-coin" placeholder="Select coin"
            class="xl:w-96 dark:bg-gray-700 bg-gray-200"
            style="color:grey;padding: 7px; border:none;outline:none;border-radius:5px; margin-bottom: 0.75rem;"
            readonly>
          <input type="number" name="inr" id="buy-volume" placeholder="INR Amount"
            class="xl:w-96 dark:bg-gray-700 bg-gray-200"
            style="color:grey;padding: 7px; border:none;outline:none;border-radius:5px; margin-bottom: 0.75rem;"
            value="" required>
          <input type="text" name="total" id="user-pay" placeholder="Total"
            class="xl:w-96 dark:bg-gray-700 bg-gray-200"
            style="color:grey;padding: 7px; border:none;outline:none;border-radius:5px; margin-bottom: 0.75rem;"
            readonly>
          <button
            class="shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded"
            type="text" style="padding-left:30px;padding-right:30px">
            Buy
          </button>
          </form>
        </div>
      </div>
      <div id="second" class="hidden p-4 dark:text-white">
        <div class="flex justify-center" style="flex-direction:column !important; align-items:center !important">
          <div class="mb-3 xl:w-96" style="min-width: 216px;">
          <form action="" method="none" style="margin-bottom: 0;">
            <select class="form-select appearance-none
      block
      w-full
      px-3
      py-1.5
      text-base
      font-normal
      bg-gray-200 bg-clip-padding bg-no-repeat
      rounded
      transition
      ease-in-out
      m-0
      dark:bg-gray-700
      focus:text-gray-700 focus:bg-gray focus:outline-none" aria-label="Default select example" id="drop-down-coin-2"
              style="color:grey;border: none !important;" name="coins">
            </select>
          </div>
          <input type="hidden" value="{{privateKey}}" >
           <input type="hidden" value="{{publicAddress}}" >
            <input type="hidden" value="{{name}}" >
          <input type="text"  id="price-in-coin-2" placeholder="Select coin"
            class="xl:w-96 dark:bg-gray-700 bg-gray-200"
            style="color:grey;padding: 7px; border:none;outline:none;border-radius:5px; margin-bottom: 0.75rem;"
            readonly>
          <input type="number"  id="buy-volume-2" placeholder="INR Amount"
            class="xl:w-96 dark:bg-gray-700 bg-gray-200"
            style="color:grey;padding: 7px; border:none;outline:none;border-radius:5px; margin-bottom: 0.75rem;"
            value="" required>
          <input type="text" id="user-pay-2" placeholder="Total"
            class="xl:w-96 dark:bg-gray-700 bg-gray-200"
            style="color:grey;padding: 7px; border:none;outline:none;border-radius:5px; margin-bottom: 0.75rem;"
            readonly>
          <button
            class="shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded"
            type="text" style="padding-left:30px;padding-right:30px">
            Sell
          </button>
          </form>
        </div>
      </div>
      <div id="third" class="hidden p-4 dark:text-white" style="width: 100%;">
        <form class="w-full" style="margin-top:30px; margin-bottom:30px" method="none">
          <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/4">
              <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="inline-full-name">
                Amount
              </label>
            </div>
            <div class="md:w-2/4">
              <input
                class="bg-gray-200 appearance-none rounded w-full py-2 px-4 text-gray-500 leading-tight focus:outline-none focus:border-purple-500 dark:bg-gray-700 dark:text-gray-300"
                id="inline-full-name" type="number" placeholder="â‚¹0" required>
            </div>
          </div>
          <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/4">
              <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="inline-password">
                To
              </label>
            </div>
            <div class="md:w-2/4">
              <input
                class="bg-gray-200 appearance-none rounded w-full py-2 px-4 text-gray-500 leading-tight focus:outline-none focus:border-purple-500 dark:bg-gray-700 dark:text-gray-300"
                id="inline-password" type="text" placeholder="Address (ether only)" required autocomplete="off">
            </div>
          </div>
          <p id="show_ether" class="md:w-3/4 block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pb-4 pr-0"
            for="inline-full-name ">0 Ethers</p>
          <div class="md:flex md:items-center" style="justify-content: center;">
            {{!-- <div class="md:w-1/3"></div> --}}
            <div class="md:w-2/4">
              <button
                class="shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded"
                type="text">
                Send
              </button>
            </div>
          </div>
        </form>
      </div>
      <div id="fourth" class="hidden dark:text-white" style="width: 100%; overflow:auto;padding-top:20px">
        <div class="fourth_cont" style="width:50%;margin:0 auto;">
          <img src="" alt="qr" id="qrcode">
          <p id="qr_add"
            class="bg-gray-200 appearance-none rounded py-2 px-4  leading-tight dark:text-stone-50 dark:bg-gray-700"
            style="font-size: 12px;margin:20px 0; width:100%; text-align:center;min-width:340px">{{publicAddress}}</p>
          <div class="asset bg-gray-200 appearance-none rounded py-2 px-4 dark:text-stone-50 dark:bg-gray-700 "
            style="display: flex; align-items:center; width: 100%; justify-content:center;min-width:285px">
            <img src="https://assets.coingecko.com/coins/images/279/large/ethereum.png?1595348880" alt="" height="40px"
              width="40px">
            <div>
              <p>Asset</p>
              <p>Ethereum</p>
            </div>
          </div>
          <p id="qr_add"
            class="bg-gray-200 appearance-none rounded py-2 px-4  leading-tight dark:text-stone-50 dark:bg-gray-700"
            style="font-size: 13px;margin:20px 0; width:100%; text-align:center;min-width:285px">Only send Ethereum
            (ETHER) to this
            address</p>
        </div>
      </div>
    </div>

  </div>
  <div>
    <h1>coins</h1>
    <p>{{coin}}</p>
  </div>

  <script>
    let tabsContainer = document.querySelector("#tabs");

    let tabTogglers = tabsContainer.querySelectorAll("a");
    console.log(tabTogglers);

    tabTogglers.forEach(function (toggler) {
      toggler.addEventListener("click", function (e) {
        e.preventDefault();

        let tabName = this.getAttribute("href");

        let tabContents = document.querySelector("#tab-contents");

        for (let i = 0; i < tabContents.children.length; i++) {
          tabTogglers[i].parentElement.classList.remove("border-purple-600", "border-b-4", "-mb-px", "opacity-100"); tabContents.children[i].classList.remove("hidden");
          if ("#" + tabContents.children[i].id === tabName) {
            continue;
          }
          tabContents.children[i].classList.add("hidden");

        }
        e.target.parentElement.classList.add("border-purple-600", "border-b-4", "-mb-px", "opacity-100");
      });
    });

    document.getElementById("default-tab").click();

  </script>
  </div>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"
    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
  <script>
    $(document).ready(function () {
      var coins = {
        "async": true, "crossDomain": true, "url":
          "https://api.coingecko.com/api/v3/simple/price?ids=ethereum&vs_currencies=inr",
        "method": "GET"
      }
      $.ajax(coins).done(function (response) {
        $('#inline-full-name').keyup(() => {
          var ether_price = response.ethereum.inr;
          var input = $('#inline-full-name').val();
          var ether = (1 / ether_price) * input;
          console.log(ether);
          $('#show_ether').text(ether + " Ethers")
        });
      });
    });
  </script>
  <script>
    $(document).ready(function () {
      var qr_api = "https://api.qrserver.com/v1/create-qr-code/?size=250x250&data=";
      var address = $('#qr_add').text();
      console.log(address)
      var qr_img = qr_api + address;
      $('#qrcode').attr("src", qr_img)
  
    });
  </script>

  {{!-- appending data to drop down --}}
  <script>
    $(document).ready(function () {
      var coins = {
        "async": true, "crossDomain": true, "url":
          "https://api.coingecko.com/api/v3/coins/markets?vs_currency=inr&order=market_cap_desc",
        "method": "GET"
      }
      $.ajax(coins).done(function (response) {
        response.map(myFunction);
        function myFunction(num) {
          $("#drop-down-coin").append('<option value="' + num.id + '">' + num.name + '</option>')
          $("#drop-down-coin-2").append('<option value="' + num.id + '">' + num.name + '</option>')
          if (num.id == "bitcoin") {
            {{!-- var btc = "Current value: " + num.current_price --}}
            $('#price-in-coin').attr("value", num.current_price);
            $('#price-in-coin-2').attr("value", num.current_price);
          }
        }
        $('#drop-down-coin').change(function () {
          var val = $(this).val();
          $('#buy-volume').val("");
          $('#user-pay').attr("value", "");
          response.map(function func(num) {
            if (num.id == val) {
              {{!-- var coin_price = "Current value: " + num.current_price --}}
              $('#price-in-coin').attr("value", num.current_price);
            }

          })
        })
        $('#drop-down-coin-2').change(function () {
          var val = $(this).val();
          $('#buy-volume-2').val("");
          $('#user-pay-2').attr("value", "");
          response.map(function func(num) {
            if (num.id == val) {
              {{!-- var coin_price = "Current value: " + num.current_price --}}
              $('#price-in-coin-2').attr("value", num.current_price);
            }

          })
        })

        $('#buy-volume').keyup(function () {
          var val = $('#drop-down-coin').val();
          response.map(function func(num) {
            if (num.id == val) {
              var coin_price = num.current_price;
              var coin_one = 1 / coin_price;
              var user_in = $('#buy-volume').val();
              var show_price = user_in * coin_one;
              $('#user-pay').attr("value", show_price);
            }
          })
        })

        $('#buy-volume-2').keyup(function () {
          var val = $('#drop-down-coin-2').val();
          response.map(function func(num) {
            if (num.id == val) {
              var coin_price = num.current_price;
              var coin_one = 1 / coin_price;
              var user_in = $('#buy-volume-2').val();
              var show_price = user_in * coin_one;
              $('#user-pay-2').attr("value", show_price);
            }
          })
        })
      });
    });
  </script>
  <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
<script src="./toaster/build/toastr.min.js"></script> 
  <script>
  toastr.options = {
  "closeButton": true,
  "debug": false,
  "newestOnTop": false,
  "progressBar": true,
  "positionClass": "toast-top-right",
  "preventDuplicates": false,
  "onclick": null,
  "showDuration": "300",
  "hideDuration": "1000",
  "timeOut": "5000",
  "extendedTimeOut": "1000",
  "showEasing": "swing",
  "hideEasing": "linear",
  "showMethod": "fadeIn",
  "hideMethod": "fadeOut"
}
   {{#if messages.info}}
    toastr.warning('<i class="fas fa-exclamation-triangle"></i> {{messages.info}}')
    {{/if}}
     {{#if messages.success}}
    toastr.success('<i class="fas fa-check-square"></i> {{messages.success}}')
    {{/if}}

      {{#if messages.error}}
    toastr.error('<i class="fas fa-exclamation-triangle"></i> {{messages.error}}')
    {{/if}}
    {{#if messages.warning}}
    toastr.warning('<i class="fas fa-exclamation-circle"></i> {{messages.warning}}')
    {{/if}}

</script>
</body>

</html>