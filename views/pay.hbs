  <style>
    .fourth_cont {
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
    }

    /* Chrome, Safari, Edge, Opera */
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
      -webkit-appearance: none;
      margin: 0;
    }

