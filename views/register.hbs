<script src="./toaster/build/toastr.min.js"></script>
  
<script>
  toastr.options = {
  "closeButton": true,
  "debug": false,
  "newestOnTop": false,
  "progressBar": true,
  "positionClass": "toast-top-right",
  "preventDuplicates": false,
  "onclick": null,
  "showDuration": "300",
  "hideDuration": "1000",
  "timeOut": "5000",
  "extendedTimeOut": "1000",
  "showEasing": "swing",
  "hideEasing": "linear",
  "showMethod": "fadeIn",
  "hideMethod": "fadeOut"
}
   {{#if messages.success}}
    toastr.success('<i class="fas fa-check-square"></i> {{messages.success}}')
    {{/if}}

      {{#if messages.error}}
    toastr.error('<i class="fas fa-exclamation-triangle"></i> {{messages.error}}')
    {{/if}}

     {{#if messages.warning}}
    toastr.info('<i class="fas-solid fas-brake-warning"></i>{{messages.warning}}')
    {{/if}}
   
</script>
