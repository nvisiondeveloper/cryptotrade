      }
    }

    #all-price-span{
      border-radius: 5px;
      padding: 5px;
    }

    .price-eff-green {
      animation: fadeOut-gr ease 5s;
      -webkit-animation: fadeOut-gr ease 5s;
      -moz-animation: fadeOut-gr ease 5s;
      -o-animation: fadeOut-gr ease 5s;
      -ms-animation: fadeOut-gr ease 5s;
    }
    @keyframes fadeOut-gr {
      0% {
        background-color: green;
      }

      100% {
        background-color: transparent;
      }
    }

    @-moz-keyframes fadeOut-gr {
      0% {
        background-color: green;
      }

      100% {
        background-color: transparent;
      }
    }

    @-webkit-keyframes fadeOut-gr {
      0% {
        background-color: green;
      }

      100% {
        background-color: transparent;
      }
    }

    @-o-keyframes fadeOut-gr {
      0% {
        background-color: green;
      }

      100% {
        background-color: transparent;
      }
    }

    @-ms-keyframes fadeOut-gr {
      0% {
        background-color: green;
      }

      100% {
        background-color: transparent;
      }
    }

    .price-eff-red {
      animation: fadeOut ease 5s;
      -webkit-animation: fadeOut ease 5s;
      -moz-animation: fadeOut ease 5s;
      -o-animation: fadeOut ease 5s;
      -ms-animation: fadeOut ease 5s;
    }

    @keyframes fadeOut {
      0% {
        background-color: red;
      }

      100% {
        background-color: transparent;
      }
    }

    @-moz-keyframes fadeOut {
      0% {
        background-color: red;
      }

      100% {
        background-color: transparent;
      }
    }

    @-webkit-keyframes fadeOut {
      0% {
        background-color: red;
      }

      100% {
        background-color: transparent;
      }
    }

    @-o-keyframes fadeOut {
      0% {
        background-color: red;
      }

      100% {
        background-color: transparent;
      }
    }

    @-ms-keyframes fadeOut {
      0% {
        background-color: red;
      }

      100% {
        background-color: transparent;
      }
    }
   #loading {
    border: 16px solid #f3f3f3; /* Light grey */
  border-top: 16px solid #3498db; /* Blue */
  border-radius: 50%;
  width: 120px;
  height: 120px;
    visibility: hidden;
  animation: spin 2s linear infinite;
   
}
#loading.display {
    visibility: visible;
}

   @keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }

