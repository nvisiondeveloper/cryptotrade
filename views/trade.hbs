      <script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
      <script>
        //loading
        $(document).ready(function () {
          var coins = {
            "async": true, "crossDomain": true, "url":
              "https://api.coingecko.com/api/v3/coins/markets?vs_currency=inr&order=market_cap_desc",
            "method": "GET"
          }
         const loader = document.querySelector("#loading");
         function displayLoading() {
            loader.classList.add("display");
        // to stop loading after some time
        setTimeout(() => {
          loader.classList.remove("display");
         }, 5000);
        }
        function hideLoading() {
          loader.classList.remove("display");
        }

        displayLoading()
          $.ajax(coins).done(function (response) {
            response.map(myFunction);
             
            function myFunction(num) {
              hideLoading();
              $("#coin").append('<tr class="text-gray-700 dark:text-gray-400"><td class="px-4 py-3"><div class="flex items-center text-sm"><div class="relative w-8 h-8 mr-3 rounded-full md:block"><img class="object-cover w-full h-full rounded-full" src="' + num.image + '" alt="" loading="lazy"/><div class="absolute inset-0 rounded-full shadow-inner" aria-hidden="true"></div></div><div><p class="font-semibold"><a href="/' + num.id + '">' + num.name + '</a></p><p class="text-xs text-gray-600 dark:text-gray-400">' + num.symbol + '</p></div></div></td><td id="coin-price-' + num.market_cap_rank + '" class="px-4 py-3 text-sm"><span id="all-price-span">₹' + num.current_price + '</span></td><td class="px-4 py-3 text-xs"><span class="changer px-2 py-1 font-semibold leading-tight rounded-full" id="coin-no-' + num.market_cap_rank + '">' + num.price_change_percentage_24h + '%</span></td><td class="px-4 py-3 text-sm">  <button @click="openModal" class="px-4 py-2 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple">Buy</button>');

              var temp = "#coin-no-" + num.market_cap_rank;
              if (num.price_change_percentage_24h < 0) {
                $(temp).addClass("cl-red");
              }
              else {
                $(temp).addClass("cl-green");
              }
            }
          });

          setInterval(() => {
            var coins = {
              "async": true, "crossDomain": true, "url":
                "https://api.coingecko.com/api/v3/coins/markets?vs_currency=inr&order=market_cap_desc",
              "method": "GET"
            }
            $.ajax(coins).done(function (response) {
              response.map(myFunction);
              async function myFunction(num) {
                var temp = "#coin-no-" + num.market_cap_rank;
                var temp2 = "#coin-price-" + num.market_cap_rank;
                var per_change = num.price_change_percentage_24h + "%";
                var price_change = "₹" + num.current_price;

                // price change effect
                var previous_price = $(temp2).text();
                previous_price = previous_price.replace('₹', '');
                previous_price = Number(previous_price);
  
                if (previous_price != num.current_price) {
                  if (previous_price < num.current_price) {
                    $(temp2 + " span").addClass("price-eff-green");
                    console.log("price change in green");
                    setTimeout(()=>{
                      $(temp2 + " span").removeClass("price-eff-green");
                    }, 5000);
                  }
                  else {
                    $(temp2 + " span").addClass("price-eff-red");
                    setTimeout(()=>{
                      $(temp2 + " span").removeClass("price-eff-red");
                    }, 5000);
                  }
                }

                $(temp).text(per_change);
                $(temp2 + " span").text(price_change);
                if (num.price_change_percentage_24h < 0) {
                  $(temp).removeClass("cl-green");
                  $(temp).addClass("cl-red");
                }
                else {
                  $(temp).removeClass("cl-red");
                  $(temp).addClass("cl-green");
                }
              }
            });
          }, 5000);

        });
      </script>
      <script>  
        //for searching coins
      $(document).ready(function(){  
           $('#search').keyup(function(){
             // Search Text
              var search = $(this).val();

            // Hide all table tbody rows
              $('table tbody tr').hide();

              // Count total search result
             var len = $('table tbody tr:not(.notfound) td:contains("'+search+'")').length;

          if(len > 0){
      // Searching text in columns and show match row
            $('table tbody tr:not(.notfound) td:contains("'+search+'")').each(function(){
           $(this).closest('tr').show();
         });
          }else{
          $('.notfound').show();
        }

       });
        $.expr[":"].contains = $.expr.createPseudo(function(arg) {
   return function( elem ) {
     return $(elem).text().toUpperCase().indexOf(arg.toUpperCase()) >= 0;
   };
});
      });
  
 </script>  
</body>

